<%- include('partials/header', { user: locals.user }) %>

    <div class="flex flex-col items-center justify-center h-[calc(100vh-200px)] text-center">
        <div
            class="bg-discord-dark p-10 rounded-xl shadow-lg max-w-lg w-full mx-4 transform transition hover:scale-[1.01]">
            <h1 class="text-4xl font-extrabold text-white mb-4">Manage Your Server</h1>
            <p class="text-gray-400 mb-8 text-lg">Configure moderation, security, and automation settings with ease.</p>

            <% if (!locals.user) { %>
                <a href="/login"
                    class="inline-block bg-discord-blurple hover:bg-indigo-600 text-white font-bold py-3 px-8 rounded-lg shadow-lg transition duration-300 w-full sm:w-auto">
                    Login with Discord
                </a>
                <% } else { %>
                    <div class="space-y-4">
                        <p class="text-xl">Welcome back, <span class="font-bold text-discord-blurple">
                                <%= user.username %>
                            </span>!</p>
                        <a href="/dashboard"
                            class="inline-block bg-discord-green hover:bg-green-700 text-white font-bold py-3 px-8 rounded-lg shadow-lg transition duration-300 w-full sm:w-auto">
                            Go to Dashboard
                        </a>
                    </div>
                    <% } %>
        </div>
    </div>

    <%- include('partials/footer') %>